# ============================================================================
# IMAGES ET VERSIONS RUNTIME
# ============================================================================
PYTHON_VERSION=3.12-slim
MYSQL_IMAGE_TAG=8.4
PMA_IMAGE_TAG=latest
FLARESOLVERR_IMAGE_TAG=latest

# ============================================================================
# NOMS DES CONTENEURS
# ============================================================================
CONTAINER_NAME_MYSQL=scrapsama_mysql
CONTAINER_NAME_PMA=scrapsama_phpmyadmin
CONTAINER_NAME_APP=scrapsama_app
CONTAINER_NAME_WEB=scrapsama_web
CONTAINER_NAME_FLARESOLVERR=scrapsama_flaresolverr
CONTAINER_NAME_VPN=scrapsama_vpn

# ============================================================================
# PORTS D'ACCÃˆS (HOST)
# ============================================================================
MYSQL_HOST_PORT=3306
PMA_HOST_PORT=8080
WEB_HOST_PORT=5000
FLARESOLVERR_HOST_PORT=8191

# ============================================================================
# CONFIGURATION MYSQL
# ============================================================================
MYSQL_HOST=mysql
MYSQL_ROOT_USER=root
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=scrapsama_db
MYSQL_USER=scrapsama_user
MYSQL_PASSWORD=scrapsama_password

# ============================================================================
# CONFIGURATION PHPMYADMIN
# ============================================================================
PMA_UPLOAD_LIMIT=300M

# ============================================================================
# CONFIGURATION FLARESOLVERR
# ============================================================================
FLARESOLVERR_URL=http://localhost:8191/v1
FLARESOLVERR_ENABLED=true
FLARESOLVERR_LOG_LEVEL=info
FLARESOLVERR_LOG_HTML=false
FLARESOLVERR_CAPTCHA_SOLVER=none
FLARESOLVERR_HEADLESS=true
FLARESOLVERR_BROWSER_TIMEOUT=40000
FLARESOLVERR_TEST_URL=https://www.google.com

# ============================================================================
# CONFIGURATION ANIME-SAMA
# ============================================================================
ANIME_SAMA_URL=https://anime-sama.org/

# ============================================================================
# CONFIGURATION PROTONVPN
# ============================================================================
PROTONVPN_USERNAME=your_protonvpn_username
PROTONVPN_PASSWORD=your_protonvpn_password
PROTONVPN_SERVER=nl-free-01.protonvpn.net
PROTONVPN_CONFIG_URL=
